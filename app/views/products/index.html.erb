<!-- app/views/products/index.html.erb -->

<!-- Page Header -->
<div class="text-center mb-12">
  <h1 class="text-5xl font-bold mb-4">All Products</h1>
  <p class="text-xl text-base-content/70 max-w-3xl mx-auto">
    Browse embroidery designs and find the perfect pattern for your next project.
  </p>
</div>

<!-- Filters and Search -->
<div class="card bg-base-100 shadow-lg mb-8">
  <div class="card-body">
    <div class="flex flex-col lg:flex-row gap-4 items-center">
      <%= form_with url: products_path, method: :get, local: true, class: "flex flex-1 gap-2 flex-wrap" do |f| %>
        
        <!-- ðŸ”Ž Search -->
        <div class="form-control flex-1">
          <%= f.text_field :search, value: params[:search], placeholder: "Search products...", class: "input input-bordered w-full" %>
        </div>

        <!-- ðŸ—‚ï¸ Category Filter -->
        <select name="category_id" class="select select-bordered">
          <option value="">All Categories</option>
          <% Category.all.each do |category| %>
            <option value="<%= category.id %>" <%= "selected" if params[:category_id].to_s == category.id.to_s %>>
              <%= category.name %>
            </option>
          <% end %>
        </select>

        <!-- ðŸ”ƒ Sorting -->
        <select name="sort" class="select select-bordered">
          <option value="">Sort by</option>
          <option value="newest" <%= "selected" if params[:sort] == "newest" %>>Newest First</option>
          <option value="price_low" <%= "selected" if params[:sort] == "price_low" %>>Price: Low to High</option>
          <option value="price_high" <%= "selected" if params[:sort] == "price_high" %>>Price: High to Low</option>
        </select>

        <!-- ðŸŽ¨ Format Filter -->
        <select name="format" class="select select-bordered">
          <option value="">All Formats</option>
          <% Product.distinct.pluck(:file_format).compact.each do |formats| %>
            <% formats.split(",").each do |format| %>
              <option value="<%= format.strip %>" <%= "selected" if params[:format] == format.strip %>>
                <%= format.strip %>
              </option>
            <% end %>
          <% end %>
        </select>

        <%= f.submit "Filter", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

<!-- Products Grid -->
<% if @products.empty? %>
  <div class="card bg-base-100 shadow-xl">
    <div class="card-body text-center py-20">
      <div class="text-8xl mb-6">ðŸŽ¨</div>
      <h2 class="text-3xl font-bold mb-4">No Products Found</h2>
      <p class="text-lg text-base-content/70 mb-8 max-w-md mx-auto">
        Try adjusting your filters or search terms.
      </p>
      <%= link_to "Browse Categories", categories_path, class: "btn btn-primary" %>
    </div>
  </div>
<% else %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
    <% @products.each do |product| %>
      <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-all duration-300 group">
        <figure class="px-4 pt-4 relative overflow-hidden">
          <% if product.images.attached? %>
            <%= image_tag product.images.first, class: "rounded-lg h-48 w-full object-cover group-hover:scale-105 transition-transform duration-300" %>
          <% else %>
            <div class="rounded-lg h-48 w-full bg-gradient-to-br from-primary/20 to-secondary/20 flex items-center justify-center">
              <span class="text-5xl opacity-50">ðŸŽ¨</span>
            </div>
          <% end %>

          <!-- Category Badge -->
          <% if product.category.present? %>
            <div class="absolute top-6 left-6">
              <%= link_to product.category.name, category_path(product.category), class: "badge badge-primary badge-sm hover:bg-primary/80" %>
            </div>
          <% end %>

          <!-- Wishlist Button -->
          <% if user_signed_in? %>
            <div class="absolute top-6 right-6">
              <% if in_wishlist?(product) %>
                <%= form_with url: wishlist_item_path(wishlist_item_for(product)), method: :delete, local: true do %>
                  <button type="submit" class="btn btn-circle btn-sm btn-error">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                    </svg>
                  </button>
                <% end %>
              <% else %>
                <%= form_with url: wishlist_items_path, method: :post, local: true do %>
                  <%= hidden_field_tag :product_id, product.id %>
                  <button type="submit" class="btn btn-circle btn-sm btn-ghost bg-white/80 hover:bg-white">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                    </svg>
                  </button>
                <% end %>
              <% end %>
            </div>
          <% end %>
        </figure>

        <div class="card-body p-4">
          <h3 class="card-title text-lg mb-2">
            <%= link_to product.title, product_path(product), class: "hover:text-primary transition-colors" %>
          </h3>
          <p class="text-sm text-base-content/70 mb-3">
            <%= truncate(product.description.to_plain_text, length: 60) if product.description.present? %>
          </p>

          <div class="flex items-center justify-between mb-4">
            <span class="text-xl font-bold text-primary">$<%= product.price %></span>
          </div>

          <% if product.file_format.present? %>
            <div class="flex flex-wrap gap-1 mb-4">
              <% product.file_format.split(",").each do |format| %>
                <div class="badge badge-outline badge-xs"><%= format.strip %></div>
              <% end %>
            </div>
          <% end %>

          <div class="card-actions justify-between">
            <%= link_to "View Details", product_path(product), class: "btn btn-outline btn-sm flex-1" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>


<div class="card w-full bg-base-100 shadow-xl mb-12">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <figure class="px-10 pt-10">
        <% if @product.images.attached? %>
          <%= image_tag @product.images.first, class: "rounded-xl w-full h-96 object-cover" %>
        <% else %>
          <img src="https://via.placeholder.com/500x400?text=No+Image" alt="No Image" class="rounded-xl w-full h-96 object-cover" />
        <% end %>
      </figure>
    </div>
    <div class="card-body">
      <h1 class="card-title text-3xl"><%= @product.title %></h1>
      <p class="text-lg font-semibold mt-2">$<%= @product.price %></p>
      <p class="mt-4"><%= @product.description || "No description available." %></p>
      <% if @product.embroidery_file.attached? %>
        <p class="mt-4 text-sm text-gray-600">Embroidery File Available: <%= @product.file_format || "N/A" %></p>
      <% else %>
        <p class="mt-4 text-sm text-gray-600">No embroidery file available for this product.</p>
      <% end %>
      <div class="card-actions justify-end mt-6">
        <%= link_to "Add to Cart", "#", class: "btn btn-primary" %>
        <%= button_to "Buy Now", checkout_index_path(product_id: @product.id), method: :post, class: "btn btn-primary" %>
        
        <%= link_to "Back to Products", products_path, class: "btn btn-outline btn-secondary" %>
        <% if current_user&.admin? %>
          <%= link_to "Edit Product", edit_product_path(@product), class: "btn btn-accent" %>
        <% end %>
      </div>
      </div>
    </div>
  </div>
</div>

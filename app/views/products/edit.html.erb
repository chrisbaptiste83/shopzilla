
<%= form_with model: @product, local: true, html: { multipart: true, class: "card w-full bg-base-100 shadow-xl mb-12" } do |f| %>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <figure class="px-10 pt-10">
        <% if @product.images.attached? %>
          <%= image_tag @product.images.first, class: "rounded-xl w-full h-96 object-cover" %>
        <% else %>
          <img src="https://via.placeholder.com/500x400?text=No+Image" alt="No Image" class="rounded-xl w-full h-96 object-cover" />
        <% end %>
        <div class="mt-4">
          <%= f.label :images, "Update Images", class: "label" %>
          <%= f.file_field :images, multiple: true, class: "file-input file-input-bordered w-full" %>
        </div>
      </figure>
    </div>

    <div class="card-body">
      <div class="form-control">
        <%= f.label :title, class: "label" %>
        <%= f.text_field :title, class: "input input-bordered" %>
      </div>

      <div class="form-control mt-4">
        <%= f.label :price, class: "label" %>
        <%= f.number_field :price, step: 0.01, class: "input input-bordered" %>
      </div>

      <div class="form-control mt-4">
        <%= f.label :description, class: "label" %>
        <%= f.text_area :description, rows: 5, class: "textarea textarea-bordered" %>
      </div>

      <div class="form-control mt-4">
        <%= f.label :file_format, class: "label" %>
        <%= f.text_field :file_format, class: "input input-bordered" %>
      </div>

      <div class="form-control mt-4">
        <%= f.label :embroidery_file, "Embroidery File", class: "label" %>
        <%= f.file_field :embroidery_file, class: "file-input file-input-bordered w-full" %>
      </div>

      <div class="form-control mt-4">
        <%= f.label :is_available, "Available?", class: "label" %>
        <%= f.check_box :is_available %>
      </div>

      <div class="card-actions justify-end mt-6">
        <%= f.submit "Update Product", class: "btn btn-primary" %>
        <%= link_to "Cancel", product_path(@product), class: "btn btn-outline btn-secondary" %>
      </div>
    </div>
  </div>
<% end %>


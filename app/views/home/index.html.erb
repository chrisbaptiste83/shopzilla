<section class="mb-16">
  <div class="text-center mb-12">
    <h2 class="text-4xl font-bold mb-4">Featured Products</h2>
    <p class="text-lg text-base-content/70 max-w-2xl mx-auto">
      Discover our most popular embroidery designs, handpicked for their quality and creativity.
    </p>
  </div>
  
  <% if @featured_products.empty? %>
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body text-center py-16">
        <div class="text-6xl mb-4">ğŸ¨</div>
        <h3 class="text-2xl font-bold mb-2">Coming Soon!</h3>
        <p class="text-base-content/70 mb-6">We're preparing amazing embroidery designs for you. Check back soon!</p>
        <%= link_to "Browse All Products", products_path, class: "btn btn-primary" %>
      </div>
    </div>
  <% else %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% @featured_products.each do |product| %>
        <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-all duration-300 group">
          <figure class="px-6 pt-6 relative overflow-hidden">
            <% if product.images.attached? %>
              <%= image_tag product.images.first, class: "rounded-xl h-56 w-full object-cover group-hover:scale-105 transition-transform duration-300" %>
            <% else %>
              <div class="rounded-xl h-56 w-full bg-gradient-to-br from-primary/20 to-secondary/20 flex items-center justify-center">
                <span class="text-6xl opacity-50">ğŸ¨</span>
              </div>
            <% end %>
            <div class="absolute top-8 right-8">
              <div class="badge badge-primary">Featured</div>
            </div>
          </figure>
          <div class="card-body">
            <h3 class="card-title text-xl mb-2">
              <%= product.title %>
              <div class="badge badge-secondary">NEW</div>
            </h3>
            
          <p class="text-sm text-base-content/70 mb-3">
            <%= truncate(product.description.body.to_html.html_safe, length: 60, escape: false) %>
          </p>

            </p>
            <div class="flex items-center justify-between">
              <span class="text-2xl font-bold text-primary">$<%= product.price %></span>
              <div class="rating rating-sm">
                <input type="radio" name="rating-<%= product.id %>" class="mask mask-star-2 bg-orange-400" />
                <input type="radio" name="rating-<%= product.id %>" class="mask mask-star-2 bg-orange-400" />
                <input type="radio" name="rating-<%= product.id %>" class="mask mask-star-2 bg-orange-400" />
                <input type="radio" name="rating-<%= product.id %>" class="mask mask-star-2 bg-orange-400" />
                <input type="radio" name="rating-<%= product.id %>" class="mask mask-star-2 bg-orange-400" checked />
              </div>
            </div>
            <div class="card-actions justify-between mt-6">
              <%= link_to "Quick View", product_path(product), class: "btn btn-outline btn-sm flex-1" %>
              <%= link_to "Add to Cart", "#", class: "btn btn-primary btn-sm flex-1" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="text-center mt-12">
      <%= link_to "View All Products", products_path, class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>
</section>


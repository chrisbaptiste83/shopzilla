<div class="hero min-h-screen bg-base-200">
  <div class="hero-content flex-col lg:flex-row-reverse">
    <div class="text-center lg:text-left">
      <h1 class="text-5xl font-bold">Join Us Today!</h1>
      <p class="py-6">Create your account to start exploring our collection of unique embroidery designs and patterns.</p>
    </div>
    <div class="card flex-shrink-0 w-full max-w-sm shadow-2xl bg-base-100">
      <div class="card-body">
        <h2 class="card-title justify-center text-2xl mb-4">Sign up</h2>
        
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-control">
            <%= f.label :email, class: "label" %>
            <span class="label-text">Email</span>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered", placeholder: "Enter your email" %>
          </div>

          <div class="form-control">
            <%= f.label :password, class: "label" %>
            <span class="label-text">
              Password
              <% if @minimum_password_length %>
                <span class="text-sm text-gray-500">(<%= @minimum_password_length %> characters minimum)</span>
              <% end %>
            </span>
            <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered", placeholder: "Create a password" %>
          </div>

          <div class="form-control">
            <%= f.label :password_confirmation, class: "label" %>
            <span class="label-text">Confirm Password</span>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered", placeholder: "Confirm your password" %>
          </div>

          <div class="form-control mt-6">
            <%= f.submit "Sign up", class: "btn btn-primary w-full" %>
          </div>
        <% end %>
        
        <div class="divider">OR</div>
        <div class="text-center space-y-2">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- app/views/categories/show.html.erb -->
<div class="container mx-auto p-4">
  <h1 class="text-3xl font-bold mb-6"><%= @category.name %></h1>

  <% if @products.any? %>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
      <% @products.each do |product| %>
        <div class="card bg-base-100 shadow-md rounded-lg overflow-hidden">
          <% if product.image.attached? %>
            <%= image_tag product.image.variant(resize_to_limit: [400, 400]), class: "w-full h-48 object-cover" %>
          <% else %>
            <div class="w-full h-48 bg-gray-200 flex items-center justify-center">
              <span class="text-gray-500">No Image</span>
            </div>
          <% end %>
          <div class="card-body">
            <h2 class="card-title text-lg font-semibold"><%= product.name %></h2>
            <p class="text-sm text-gray-600"><%= truncate(product.description, length: 60) %></p>
            <p class="font-bold text-primary">$<%= product.price %></p>
            <div class="card-actions mt-2">
              <%= link_to "View", product_path(product), class: "btn btn-sm btn-primary" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-500">No products available in this category yet.</p>
  <% end %>
</div>

